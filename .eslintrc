{
    "env": {
        "node": true,
        "mocha": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "extends": [ "eslint:recommended"],
    "parserOptions": {
        ecmaVersion: 6,
        ecmaFeatures: {
            jsx: true,
        },
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "off"
        ],
        "no-case-declarations": [
            "off"
        ],
    }
}